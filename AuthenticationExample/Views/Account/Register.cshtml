@model AuthenticationExample.Models.UserModel
@Html.ValidationSummary(true)
@{
    ViewBag.Title = "Register";
}

<fieldset>
    <legend>
        User Register
    </legend>
    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        <div class="clearfix">
            @Html.LabelFor(model => model.SuccessMessage, null, new { @class = "alert alert-success" })
        </div>
      
        <div class="col-md-6">
            <div class="form-group">
                <label> FirstName </label>
                <input type="text" name="firstname" class="form-control" id="firstname" />
                @Html.ValidationMessageFor(model => model.FirstName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label> Email </label>
                <input type="email" name="email" class="form-control" id="email" />
                @Html.ValidationMessageFor(model => model.Email, null, new { @class = "text-danger" })
            </div>
        </div>
        <div class="col-md-6">
            <div class="form-group">
                <label> LastName </label>
                <input type="text" name="lastname" class="form-control" id="lastname" />
                @Html.ValidationMessageFor(model => model.LastName, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label> Password </label>
                <input type="password" name="password" class="form-control" id="password" />
                @Html.ValidationMessageFor(model => model.Password, null, new { @class = "text-danger" })
            </div>
            <div class="form-group">
                <label> Confirm Password </label>
                <input type="password" name="confirmpassword" class="form-control" id="confirm-password" />
                @Html.ValidationMessageFor(model => model.ConfirmPassword, null, new { @class = "text-danger" })
            </div>
        </div>


        <input type="submit" class="btn btn-success" value="Submit" />
    }
</fieldset>

